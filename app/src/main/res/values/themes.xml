<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CryptoExchange" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
<!--        <item name="colorSecondary">@color/teal_200</item>-->
<!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textAppearance">@style/Theme.CryptoExchange.TextAppearance</item>
        <item name="android:subtitleTextAppearance">@style/Theme.CryptoExchange.TextAppearance.Subtitle</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="floatingActionButtonStyle">@style/Theme.CryptoExchange.FloatingActionButton</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.CryptoExchange.TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Theme.CryptoExchange.TextAppearance.Subtitle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/gray_light</item>
    </style>
    <style name="Theme.CryptoExchange.FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="background">@drawable/background_fab</item>
    </style>
    <style name="Theme.CryptoExchange.CircularImageView">
        <item name="cornerSize">50%</item>
    </style>
</resources>